

@model GestionVentas.Web.Models.ViewModels.Autenticacion.AutenticacionViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}



<div class="h-100 d-flex justify-content-center align-items-center  ">
    <div class="border h-50 p-4 bg-white rounded border-left">
        <h1>Inicio de Sesión</h1>
        @if (ViewBag.error != null)
        {
            <div class="text-danger" >
                 @ViewBag.error
            </div>
        }
        <form  asp-action="VerificarCredenciales" asp-controller="autenticacion" method="post">

            <div class="form-group">
                <label>Usuario</label>
                <input class="form-control" asp-for="UserName" required />
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input type="password" class="form-control" asp-for="Password" required />
            </div>
            <div class="form-group d-flex justify-content-end">
                <button type="submit" class="btn btn-success ">Iniciar Sesion</button>
            </div>

        </form>
    </div>

</div>



