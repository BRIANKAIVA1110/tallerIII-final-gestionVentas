

@using GestionVentas.Web.Enum
@model GestionVentas.Web.Models.ViewModels.Stock.StockViewModel


@{
    //ViewData["Title"] = "Agregar";
    string accionCrud = ViewData["accionCRUD"].ToString();
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@{
    /*
        POR VIEWBAG PODRIAMOS PASAR ACCION AGREGAR O MODIFICAR Y ESTE USARLO EN EL <H1>
    */
}
<h1>Articulo > @accionCrud.ToLower()</h1>

<div class="container p-5">
    @* asp-action = AccionesCRUD.AGREGAR || AccionesCRUD.MODIFICAR *@
    <form method="post" asp-action=@accionCrud asp-controller="stock" id="formHTTP">
        <div class="form-group">
            <label asp-for="Id" style="display:none;"></label>
            <input asp-for="Id" class="form-control form-control-sm" placeholder="" style="display:none;" />
            @*<span asp-validation-for="Codigo" class="text-danger"></span>*@
        </div>

        @*<div class="form-group row">
            <label asp-for="Codigo" class="col-form-label col-form-label-sm col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Codigo" class="form-control form-control-sm" placeholder="Codigo" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
        </div>*@



        <div class="form-group row">
            <label class="col-form-label col-form-label-sm col-sm-2">Articlulas</label>
            <div class="col-sm-10">
                <select asp-for="ArticuloId" asp-items="Model.Articulos" class="form-control form-control-sm">
                    @if (!accionCrud.ToUpper().Equals("MODIFICAR"))
                    {
                        <option selected value="0">Seleccione Categoria...</option>
                    }
                    else
                    {
                        <option selected value=@Model.ArticuloId>@Model.ArticuloDescripcion</option>
                    }

                </select>
            </div>

        </div>

        <div class="form-group row">
            <label asp-for="Cantidad" class="col-form-label col-form-label-sm col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Cantidad" class="form-control form-control-sm" placeholder="Codigo" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group d-flex justify-content-end">
            <input type="submit" value=@accionCrud.ToLower() class="btn btn-success form  form-control-sm border-0  m-1">
            <a asp-action="index" asp-controller="stock" class="btn form-control-sm btn-primary text-decoration-none text-center m-1">Cancelar</a>
        </div>
    </form>
    


</div>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}


