
@model GestionVentas.Web.Models.ViewModels.Reportes.ReporteBetweenFechaViewModel

@{
    ViewData["Title"] = "ReporteCantidadArticuloVendidosPordia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reporte Cantidad Articulo Vendidos Por dia</h1>

<div class="container">
    @* asp-action = AccionesCRUD.AGREGAR || AccionesCRUD.MODIFICAR *@
    <form method="post" asp-action="GenerarReporteCantidadArticuloVendidosPordia" asp-controller="reporte" id="formHTTP">

        <div class="form-group row">
            <label asp-for="FechaDesde" class="col-form-label-sm col-sm-2"></label>
            <div class="col-sm-10">
                <input type="date"  name="FechaDesde" class="form-control form-control-sm" placeholder="Fecha Desde" required />
                <span asp-validation-for="FechaDesde" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row">
            <label asp-for="FechaHasta" class="col-form-label-sm col-sm-2"></label>
            <div class="col-sm-10">
                @* se usa name y no asp-for porque este es datetime y formatea el input para que se setee la hora*@
                <input type="date" name="FechaHasta" class="form-control form-control-sm" placeholder="Fecha Hasta" required />
                <span asp-validation-for="FechaHasta" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group d-flex justify-content-end">
            <button type="submit" class="btn btn-success form-control-sm border-0  m-1"><i class="fa fa-download"></i>Descargar</button>
        </div>
    </form>

</div>