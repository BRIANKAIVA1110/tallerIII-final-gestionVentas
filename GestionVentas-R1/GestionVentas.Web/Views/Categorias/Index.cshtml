
@using GestionVentas.Web.Enum;

@model List<GestionVentas.Web.Models.ViewModels.Articulos.CategoriaViewModel>

@{
    ViewData["Title"] = "Index";
    string tituloVista = "Categorias";
    string p_query = "";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h3>@tituloVista</h3>
<div class="container-fluid">
    <div class="container-fluid">
        <div class="row justify-content-between">
            <div class="col-lg-7 col-md-7 col-sm-12">
                <ul class="nav ">
                    <li class="nav-item ">
                        <a class="nav-link  btn-success" asp-area="" asp-controller="categorias" asp-action="form" asp-route-accionCRUD=@AccionesCRUD.AGREGAR><i class="fa fa-plus" aria-hidden="true"></i>Agregar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn-dark" href="#"><i class="fa fa-file-excel-o" aria-hidden="true"></i>Exportar</a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-5 col-md-5 col-sm-12 d-lg-inline-flex d-md-inline-flex justify-content-end ">
                <form class="form-inline" asp-action="buscar" asp-controller="categorias" method="get">

                    @* name=[nameParameter from method] --> modelos/buscar?p_query= [valueInput]   *@
                    <input class="form-control form-control-sm" placeholder="Buscar..." name="p_query">
                    <button class="form-control form-control-sm btn btn-info " type="submit"><i class="fa fa-search" aria-hidden="true"></i>Buscar</button>
                </form>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <h6 class="m-2">Registros: </h6>
        <div class="container-fluid overflow-auto " style="max-height:300px;">
            <table class="table table-light table-hover  border-dark table-sm small">
                <thead class=" thead-dark">
                    <tr>
                        <th>Acciones</th>
                        <th>#</th>
                        <th>Codigo</th>
                        <th>Descripcion</th>

                    </tr>
                </thead>
                <tbody class="table-bordered">
                    @{
                        int contRegistros = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <th>
                                    <a asp-action="eliminar" asp-controller="categorias" asp-route-id=@item.Id class="text-decoration-none text-danger"><i class="fa fa-trash fa-2x" aria-hidden="true"></i></a>
                                    <a asp-action="form" asp-controller="categorias" asp-route-accionCRUD=@AccionesCRUD.MODIFICAR asp-route-id=@item.Id class="text-decoration-none"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
                                    <a asp-action="detalle" asp-controller="categorias" asp-route-id=@item.Id class="text-decoration-none text-dark"><i class="fa fa-info fa-2x" aria-hidden="true"></i></a>
                                </th>
                                <th>@contRegistros</th>
                                <td>@item.Codigo</td>
                                <td>@item.Descripcion</td>
                            </tr>


                            contRegistros = contRegistros + 1;
                        }

                    }
                </tbody>
            </table>
        </div>
        @*<div class="container d-flex justify-content-center">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item active"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </div>*@
    </div>
</div>









