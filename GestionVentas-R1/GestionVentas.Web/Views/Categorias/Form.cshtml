
@using GestionVentas.Web.Enum
@model GestionVentas.Web.Models.ViewModels.Articulos.CategoriaViewModel


@{
    //ViewData["Title"] = "Agregar";
    string accionCrud = ViewData["accionCRUD"].ToString();
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    /*
        POR VIEWBAG PODRIAMOS PASAR ACCION AGREGAR O MODIFICAR Y ESTE USARLO EN EL <H1>
    */
}
<h1>Categorias > @accionCrud.ToLower()</h1>

@if (ViewBag.error != null)
{
    <div class="alert alert-danger">
        <strong>Exeption: </strong> @ViewBag.error
    </div>
}

<div class="container">
    @* asp-action = AccionesCRUD.AGREGAR || AccionesCRUD.MODIFICAR *@
    <form method="post" asp-action=@accionCrud asp-controller="categorias" id="formHTTP">
        <div class="form-group">
            <label asp-for="Id" style="display:none;"></label>
            <input asp-for="Id" class="form-control" placeholder="" style="display:none;" />
            @*<span asp-validation-for="Codigo" class="text-danger"></span>*@
        </div>
        <div class="form-group row">
            <label asp-for="Codigo" class="col-form-label-sm col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Codigo" class="form-control" placeholder="Codigo" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row">
            <label asp-for="Descripcion" class="col-form-label-sm col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Descripcion" class="form-control" placeholder="Descripcion" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group d-flex justify-content-end">
            <input type="submit" value=@accionCrud.ToLower() class="btn btn-success form-control-sm m-1">
            <a asp-action="index" asp-controller="categorias" class="btn form-control-sm btn-primary text-decoration-none text-center m-1">Cancelar</a>
        </div>
    </form>
    @*<button asp-action="index" asp-controller="modelos" class=" form-control btn-primary">Cancelar</button>*@


</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}




