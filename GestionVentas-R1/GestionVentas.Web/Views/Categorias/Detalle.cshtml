
@using GestionVentas.Web.Enum

@model GestionVentas.Web.Models.ViewModels.Articulos.CategoriaViewModel
@{
    ViewData["Title"] = "Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categorias > Detalle</h1>

<b><label asp-for="Codigo" class="control-label"></label>:</b>
@Html.DisplayFor(x => x.Codigo)
<br />
<b><label asp-for="Descripcion" class="control-label"></label>:</b>
@Html.DisplayFor(x => x.Descripcion)

<hr />
<a asp-action="index" asp-controller="categorias" class="btn btn-dark form-control-sm ">Volver </a>
<a asp-action="form" asp-controller="categorias" asp-route-Id=@Model.Id asp-route-accionCRUD=@AccionesCRUD.MODIFICAR class="btn btn-primary form-control-sm ">Modificar</a>
<a asp-action="eliminar" asp-controller="categorias" asp-route-Id=@Model.Id class="btn btn-danger form-control-sm ">Eliminar</a>



