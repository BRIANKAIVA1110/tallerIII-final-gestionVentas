

@using GestionVentas.Web.Enum
@model ArticuloDTO


@{
    //ViewData["Title"] = "Agregar";
    string accionCrud = ViewData["accionCRUD"].ToString();
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@{
/*
    POR VIEWBAG PODRIAMOS PASAR ACCION AGREGAR O MODIFICAR Y ESTE USARLO EN EL <H1>
*/
}
<h1>Articulo > @accionCrud.ToLower()</h1>

<div class="container">
    @* asp-action = AccionesCRUD.AGREGAR || AccionesCRUD.MODIFICAR *@
    <form method="post" asp-action=@accionCrud asp-controller="articulos" id="formHTTP">
        <div class="form-group">
            <label asp-for="Id" style="display:none;"></label>
            <input asp-for="Id" class="form-control" placeholder="" style="display:none;" />
            @*<span asp-validation-for="Codigo" class="text-danger"></span>*@
        </div>
        <div class="form-group">
            <label asp-for="Codigo"></label>
            <input asp-for="Codigo" class="form-control" placeholder="Codigo" />
            <span asp-validation-for="Codigo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descripcion"></label>
            <input asp-for="Descripcion" class="form-control" placeholder="Descripcion" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="modelos">Seleccione modelo: </label>
            <select class="form-control " id="modelos">
                <option selected>modelos......</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>

            </select>
        </div>

        <div class="form-group">
            <label for="color">Seleccione color: </label>
            <select class="form-control " id="color">
                <option selected>colores......</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
            </select>
        </div>


        <div class="form-group">
            <input type="submit" value="Agregar" class="btn btn-success form-control-sm border-0 ">
            <a asp-action="index" asp-controller="articulos" class="btn form-control-sm btn-primary text-decoration-none text-center">Cancelar</a>
        </div>
    </form>
    @*<button asp-action="index" asp-controller="modelos" class=" form-control btn-primary">Cancelar</button>*@


</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}


