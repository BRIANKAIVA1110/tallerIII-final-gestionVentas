@using GestionVentas.Web.Enum

@model GestionVentas.Web.Models.ViewModels.Articulos.MarcaViewModel
@{
    ViewData["Title"] = "Detalle";
}

<h1>Marcas > Detalle</h1>

<b><label asp-for="Codigo" class="control-label"></label>:</b>
@Html.DisplayFor(x => x.Codigo)
<br />
<b><label asp-for="Descripcion" class="control-label"></label>:</b>
@Html.DisplayFor(x => x.Descripcion)

<hr />
<a asp-action="index" asp-controller="marcas" class="btn btn-dark form-control-sm "><i class="fa fa-arrow-left" aria-hidden="true"></i>Volver </a>
<a asp-action="form" asp-controller="marcas" asp-route-Id=@Model.Id asp-route-accionCRUD=@AccionesCRUD.MODIFICAR class="btn btn-primary form-control-sm "><i class="fa fa-pencil" aria-hidden="true"></i>Modificar</a>
<a asp-action="eliminar" asp-controller="marcas" asp-route-Id=@Model.Id class="btn btn-danger form-control-sm "><i class="fa fa-trash" aria-hidden="true"></i>Eliminar</a>

